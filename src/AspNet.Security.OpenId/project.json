{
  "version": "1.0.0-beta1-*",

  "packOptions": {
    "description": "ASP.NET Core authentication middleware for OpenID 2.0 providers.",
    "authors": [ "Kévin Chalet" ],
    "owners": [ "Kévin Chalet" ],

    "projectUrl": "https://github.com/aspnet-contrib/AspNet.Security.OpenId.Providers",
    "iconUrl": "https://avatars3.githubusercontent.com/u/7998081?s=64",
    "licenseUrl": "http://www.apache.org/licenses/LICENSE-2.0.html",

    "repository": {
      "type": "git",
      "url": "git://github.com/aspnet-contrib/AspNet.Security.OpenId.Providers"
    },

    "tags": [
      "aspnetcore",
      "authentication",
      "openid",
      "security"
    ]
  },

  "buildOptions": {
    "warningsAsErrors": true,
    "nowarn": [ "CS1591" ],
    "xmlDoc": true
  },

  "dependencies": {
    "AngleSharp": "0.9.4",
    "JetBrains.Annotations": { "type": "build", "version": "10.1.2-eap" },
    "Microsoft.AspNetCore.Authentication": "1.0.0-*",
    "Newtonsoft.Json": "8.0.3"
  },

  "frameworks": {
    "net451": {
      "frameworkAssemblies": {
        "System.IO": { "type": "build" },
        "System.Runtime": { "type": "build" }
      }
    },

    "netstandard1.3": {
      "imports": [
        "dotnet5.4",
        "portable-net451+win8"
      ]
    }
  }
}
